#!/bin/bash
#SBATCH --array=1-15
#SBATCH --time=4:00:00
#SBATCH --mem=6gb

echo "Number $SLURM_ARRAY_TASK_ID"


singularity exec -B /usr/bin/:/sysbin/ \
                 --env PATH=/miniconda3/bin/:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/sysbin/ \
                 --writable-tmpfs \
                 centos7.sif \
                 ./runExample.sh $SLURM_ARRAY_TASK_ID $SLURM_JOB_ID

echo "FINNISHED RUNNING JOB"
